{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "ES2022",
    "baseUrl": "./src",
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "noEmit": true,
    "declaration": false,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
